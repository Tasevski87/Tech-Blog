<article class="post">
    <div class="title">
        <p>{{title}}</p>
    </div>
    <div class="meta">
        {{content}}
        <br />
        Post by: {{user.username }} on
        <br />
        {{format_date created_at }}
        <br />
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>