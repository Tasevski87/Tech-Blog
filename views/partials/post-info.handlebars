<article class="post">
    <div class="title">
        <span>{{post.post_id}}<strong>{{title}}</strong></span>
    </div>
    <div class="meta">
        {{content}}
        <br />
        Post by: {{user.username}}
        <br />
        {{created_at}}
        <br />
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>